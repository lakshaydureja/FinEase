<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".MainActivity"
    android:id="@+id/drawer_layout"
    >



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/topAppBar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:title="Finease"
                    app:navigationIcon="@drawable/ic_baseline_menu_24"
                    app:navigationIconTint="@color/white"
                    android:background="@color/black"
                    />

            </com.google.android.material.appbar.AppBarLayout>



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="276dp"
                android:background="@drawable/black_round">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="296dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="354dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="33dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="61dp"
                            android:fontFamily="@font/amethysta"
                            android:text="Hey "
                            android:textColor="@color/white"
                            android:textSize="40dp" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="263dp"
                            android:layout_height="61dp"

                            android:fontFamily="@font/amethysta"
                            android:textColor="@color/white"
                            android:textSize="40dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="353dp"
                        android:layout_height="31dp"
                        android:layout_marginLeft="25dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="357dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/amethysta"
                            android:text="Let's get started."
                            android:textColor="@color/white"
                            android:textSize="21dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="354dp"
                        android:layout_height="64dp"
                        android:layout_marginLeft="25dp"
                        android:orientation="horizontal"
                        android:paddingTop="4dp">

                        <!--                        <TextView-->
                        <!--                            android:id="@+id/textView"-->
                        <!--                            android:layout_width="366dp"-->
                        <!--                            android:layout_height="54dp"-->
                        <!--                            android:layout_weight="1"-->
                        <!--                            android:clickable="true"-->
                        <!--                            android:drawableLeft="@drawable/baseline_add_location_24"-->
                        <!--                            android:drawableTint="#FEFEFE"-->
                        <!--                            android:gravity="center_vertical"-->
                        <!--                            android:paddingTop="18dp"-->
                        <!--                            android:text=" Choose your location"-->
                        <!--                            android:textSize="18sp" />-->


                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="60dp"
                            android:layout_height="49dp"
                            android:layout_weight="1"
                            app:tint="#FFFFFF"
                            app:srcCompat="@drawable/baseline_add_location_24" />

                        <Spinner
                            android:id="@+id/spinner2"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:contentDescription="Choose your Location"

                            android:gravity="center_horizontal|center_vertical" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="312dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="17dp"
                        android:layout_marginRight="0dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="9dp"
                            android:layout_weight="1"
                            android:background="@drawable/round_btn"
                            android:text="Find Talent"
                            android:textColor="#000000" />

                        <Button
                            android:id="@+id/button5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="9dp"
                            android:layout_weight="1"
                            android:background="@drawable/round_btn"
                            android:text="Find Work"
                            android:textColor="#000000" />
                    </LinearLayout>

                </LinearLayout>


            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/categories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="false"

                    android:fontFamily="@font/adamina"
                    android:inputType="none"
                    android:paddingLeft="20dp"
                    android:paddingTop="30dp"
                    android:text="Our categories"
                    android:textColor="#595757"
                    android:textSize="24sp" />

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="scroll right"

                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="6">


                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="282dp"
                            android:layout_height="130dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/border2"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"

                            app:srcCompat="@drawable/s11" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="282dp"
                            android:layout_height="130dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/border2"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            app:srcCompat="@drawable/s22" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="282dp"
                            android:layout_height="130dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/border2"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            app:srcCompat="@drawable/s33" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="282dp"
                            android:layout_height="130dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/border2"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            app:srcCompat="@drawable/s44" />

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="282dp"
                            android:layout_height="130dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/border2"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            app:srcCompat="@drawable/s55" />

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="282dp"
                            android:layout_height="130dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/border2"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            app:srcCompat="@drawable/s66" />

                    </LinearLayout>

                </HorizontalScrollView>

                <EditText
                    android:id="@+id/text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="false"

                    android:fontFamily="@font/adamina"
                    android:inputType="none"
                    android:paddingLeft="20dp"
                    android:paddingTop="30dp"
                    android:text="Find Talent around you"
                    android:textColor="#595757"
                    android:textSize="24sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ListView
                            android:id="@+id/listview"
                            android:layout_width="wrap_content"
                            android:layout_height="630dp"
                            tools:listitem="@layout/list_item" />


                    </LinearLayout>

                <EditText
                    android:id="@+id/text4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="false"

                    android:fontFamily="@font/adamina"
                    android:inputType="none"
                    android:paddingLeft="20dp"
                    android:paddingTop="30dp"
                    android:text="Find Work around you"
                    android:textColor="#595757"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ListView
                        android:id="@+id/listview2"
                        android:layout_width="wrap_content"
                        android:layout_height="650dp"
                        tools:listitem="@layout/list_item" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/my_navigation_items"
        android:visibility="visible"/>


</androidx.drawerlayout.widget.DrawerLayout>