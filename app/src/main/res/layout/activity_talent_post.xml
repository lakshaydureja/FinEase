<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".talentPost">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/black"
                app:navigationIcon="@drawable/ic_baseline_menu_24"
                app:navigationIconTint="@color/white"
                app:title="Finease" />

        </com.google.android.material.appbar.AppBarLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:background="@drawable/black_round">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="85dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abril_fatface"
                    android:text="Tell us about"
                    android:textColor="#F8F8F8"
                    android:textSize="35sp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:fontFamily="@font/abril_fatface"
                    android:text="your talent?"
                    android:textColor="#F8F7F7"
                    android:textSize="35sp" />
            </LinearLayout>

        </FrameLayout>


        <!--title-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/talInp1"
            android:layout_width="263dp"
            android:layout_height="60dp"
            android:layout_marginStart="73dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="73dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/border"
            android:hint="Title"
            android:textColorHint="#060606"
            app:hintAnimationEnabled="true"
            app:startIconDrawable="@drawable/baseline_title_24"
            app:startIconTint="#000000">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/talInp1b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0E0E0E"
                android:textColorHint="#121212" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--        desc-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/talInp2"
            android:layout_width="263dp"
            android:layout_height="119dp"
            android:layout_marginStart="73dp"
            android:layout_marginEnd="73dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/border"
            android:hint="Description"
            android:textColorHint="#060606"
            app:hintAnimationEnabled="true"
            app:startIconDrawable="@drawable/baseline_description_24"
            app:startIconTint="#000000">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/talInp2b"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#0E0E0E"
                android:textColorHint="#121212" />
        </com.google.android.material.textfield.TextInputLayout>


        <!--price-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/talInp3"
            android:layout_width="263dp"
            android:layout_height="60dp"
            android:layout_marginStart="73dp"
            android:layout_marginEnd="73dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/border"
            android:hint="Name"
            android:textColorHint="#060606"
            app:hintAnimationEnabled="true"
            app:startIconDrawable="@drawable/ic_person"
            app:startIconTint="#000000">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/talInp3b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0E0E0E"
                android:textColorHint="#121212" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--        name-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/talInp4"
            android:layout_width="263dp"
            android:layout_height="60dp"
            android:layout_marginStart="73dp"
            android:layout_marginEnd="73dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/border"
            android:hint="Fee"
            android:textColorHint="#060606"
            app:hintAnimationEnabled="true"
            app:startIconDrawable="@drawable/baseline_currency_rupee_24"
            app:startIconTint="#000000">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/talInp4b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="#0E0E0E"
                android:textColorHint="#121212" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--        date-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/talInp5"
            android:layout_width="263dp"
            android:layout_height="60dp"
            android:layout_marginStart="73dp"
            android:layout_marginEnd="73dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/border"
            android:hint="Date (DD/MM/YY)"
            android:textColorHint="#060606"
            app:hintAnimationEnabled="true"
            app:startIconDrawable="@drawable/baseline_calendar_month_24"
            app:startIconTint="#000000">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/talInp5b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="#0E0E0E"
                android:textColorHint="#121212" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/button9"

            android:layout_width="100dp"
            android:layout_height="48dp"

            android:layout_marginStart="140dp"

            android:layout_marginTop="10dp"
            android:background="@drawable/btn1"
            android:fontFamily="@font/adamina"
            android:text="Post"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:visibility="visible"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/my_navigation_items" />


</androidx.drawerlayout.widget.DrawerLayout>